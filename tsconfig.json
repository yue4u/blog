{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "module": "commonjs",
    "lib": ["ESNext", "dom"],
    "noImplicitAny": true,
    "allowJs": false,
    "removeComments": true,
    "target": "es6",
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node"],
    "typeRoots": ["src", "types"]
  },
  "rules": {
    "no-console": false,
    "interface-name": [true, "never"]
  }
}
